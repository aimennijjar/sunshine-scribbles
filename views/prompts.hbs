<!-- views/prompts.hbs -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Journal Prompts</title>
    <link href="https://fonts.googleapis.com/css2?family=Pacifico&family=Poppins:wght@300;400&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/styles.css">
</head>

<body>
    <header class="navbar">
        <div class="navbar-brand">Sunshine Scribbles ☀️</div>
        <nav class="navbar-links">
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/posts">Posts</a></li>
                <li><a href="/prompts">Prompts</a></li>

                {{#if currentUser}}
                <li><a href="/user/{{currentUser.username}}">My Posts</a></li>
                {{/if}}
                {{#unless currentUser}}
                <li><a href="/login">Login</a></li>
                <li><a href="/register">Sign Up</a></li>
                {{else}}
                <li><a href="/user/{{currentUser.username}}">Signed In as {{currentUser.username}}</a></li>
                <li><a href="/logout">LogOut</a></li>
                {{/unless}}
            </ul>
        </nav>
    </header>


    <div class="container">
        <h2 id="titleprompt">Today's Journal Prompt</h2>
        <p id="promptp">{{prompt}}</p>

        <img src="https://cdn.pixabay.com/animation/2022/08/23/03/32/03-32-04-108_512.gif" alt="Journal Prompt GIF"
            style="max-width:100%; margin-top: 20px;">
    </div>
</body>

</html>